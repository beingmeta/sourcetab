MOUNT=$1
SOURCE=$2
SVNFLAGS=
OWNER=
GROUP=
MODE=
if test -d ${MOUNT}/.svn; then
   cd ${MOUNT}; svn ${SVNFLAGS} update;
else
   svn ${SVNFLAGS} checkout ${SOURCE} ${MOUNT};
fi;
if "${OWNER}" != ""; then
   chown -R ${OWNER} ${MOUNT};
fi
if "${GROUP}" != ""; then
   chgrp -R ${GROUP} ${MOUNT};
fi
if "${MODE}" != ""; then
   chmod -R ${MODE} ${MOUNT};
fi
